PID=1000
GID=1000

# Speedtest Tracker secret (required)
APP_KEY=base64:your_speedtest_app_key_here

# Homepage secrets/vars (used by config/*.yaml)
HOMEPAGE_VAR_PLEX_KEY=your_plex_key_here
HOMEPAGE_VAR_QBT_PASSWORD=your_qbittorrent_password
HOMEPAGE_VAR_JELLYFIN_API_KEY=your_jellyfin_api_key

# Host/address used in config (LAN IP or host DNS)
HOMEPAGE_VAR_ADDRESS=10.92.8.6

# Optional: defaults to 8096; when starting via ./scripts/up.sh this is set from ../homelab-infra/registry.yaml (services.jellyfin.upstream.port)
# HOMEPAGE_VAR_JELLYFIN_PORT=8096

# Optional: adler LAN IP (used by scripts to allow IP-based access)
ADLER_IP=10.92.8.6

# Ports and HOMEPAGE_ALLOWED_HOSTS are derived from ../homelab-infra/registry.yaml when starting via ./scripts/up.sh.
